<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuoteMainTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="Toolbar.SmallTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MessageTextStyle" parent="QuoteMainTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">20</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">45dp</item>
        <item name="android:paddingRight">45dp</item>
        <item name="android:paddingTop">33dp</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="SettingsSectionTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="DividerView">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <style name="ShareButtonStyle">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/btn_messenger_bg</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ShareTextStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/send</item>
    </style>

    <style name="ImageOptionLabel">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="QuoteOptionLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="QuizTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="QuizPageIndicatorText" parent="QuizTitle">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ActionButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/action_buttons_margin</item>
        <item name="android:layout_marginRight">@dimen/action_buttons_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="ActionButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/button_text_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionButtonWithTextStyle">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/btn_messenger_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SlidingMenuOptionItemStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="SlidingMenuOptionTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SlidingMenuOptionImageStyle">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SlidingMenuOptionImageStyleSmall" parent="SlidingMenuOptionImageStyle">
        <item name="android:padding">7dp</item>
    </style>

    <style name="SlidingMenuIntentionImageStyle" parent="SlidingMenuOptionImageStyle">
        <item name="android:scaleType">center</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="HeaderTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LoginTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginSubtitle2Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginSelectLanguageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_language_selection_bg</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="LoginWithoutFacebook">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/continue_without_connection</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/ic_star_grey</item>
    </style>

    <style name="LoginTopContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">40</item>
    </style>

    <style name="LoginMiddleContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">30</item>
    </style>

    <style name="LoginTopLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SideMenuHeaderIcon">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="GifGridImageStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:src">@color/dark_gray</item>
    </style>

    <style name="TextLabelOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#8A000000</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BotAvatar">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ic_huggy_avatar</item>
    </style>

    <style name="TapToSendStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">@string/tap_to_send</item>
        <item name="android:textColor">#8BACB6</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>